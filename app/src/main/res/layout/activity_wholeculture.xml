<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeculture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@color/title"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/exist"
            android:textColor="@color/highlight"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_majorsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wholeculture"
            android:textColor="@color/highlight"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/language"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/language"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />

            <CheckBox
                android:id="@+id/history"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/history"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />

            <CheckBox
                android:id="@+id/culture"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/society"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />

            <CheckBox
                android:id="@+id/technology"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/science"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />

            <CheckBox
                android:id="@+id/art"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/art"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />

            <CheckBox
                android:id="@+id/personality"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:buttonTint="@color/highlight"
                android:checked="false"
                android:text="@string/tenacity"
                android:textColor="@color/highlight"
                android:textSize="30sp"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/basic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/info"
            android:textColor="@color/highlight"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/PB_wholeculture"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:max="10"
            android:progress="0"/>
    </LinearLayout>

</LinearLayout>