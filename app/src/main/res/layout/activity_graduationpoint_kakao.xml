<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@color/title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_기초교양"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/basic"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_basic"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="8"
                android:progress="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_전공탐색"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/majorsearch"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_majorsearch"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="10"
                android:progress="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_전인교양"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/wholeculture"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_wholecultre"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="10"
                android:progress="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_JNU"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/jnu"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_JNU"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="2"
                android:progress="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_필수전공"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/majordetail"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_major"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="12"
                android:progress="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/B_카카오트랙"
                android:onClick="onClick"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/title"
                android:text="@string/kakaotrack"
                android:textColor="@color/highlight" />

            <ProgressBar
                android:id="@+id/PB_kakao"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:max="13"
                android:progress="0"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/B_Back"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/title"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/back" />



</LinearLayout>